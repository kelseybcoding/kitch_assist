<body>

<!-- Navigation -->
<nav class="navbar navbar-default nav-justified navbar-fixed-top">
  <div class="container"> 

    <!-- Brand and toggle are grouped for better mobile display -->
    <div class="navbar-header page-scroll">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"> <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
    </div>

    <!-- Navigation Links -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

            <div class="navbar-left" class="small"><%= image_tag("kitchassist_logo_white_small.png") %></div>
<ul class="nav nav-tabs">
            <% if current_member %>
              <li role="presentation"><%= link_to "/members/#{current_member.id}", class: "page-scroll" do %><i class="glyphicon glyphicon-home"></i><%= current_member.username %></li>
              <% end %>
              <li role="presentation"><%= link_to "Add to Pantry", "/ingredients", class: "page-scroll" %></li>
              <li role="presentation"><%= link_to "Pantry", "/pantry_items", class: "page-scroll" %></li>
              <li role="presentation"><%= link_to "Logout", '/logout', class: "page-scroll" %></li>
    
            <% else %>
              <li role="presentation"><%= link_to "/", class: "page-scroll" do %><i class="glyphicon glyphicon-home"></i></li><% end %>
              <li role="presentation"><%= link_to 'Login', '/login', class: "page-scroll" %></li>
              <li role="presentation"><%= link_to 'Signup', '/signup', class: "page-scroll" %></li>
            <% end %>          
        
            <% if current_member %>
                <%= form_tag '/recipes', method: :get, class: "navbar-form navbar-right" do %>
                  <div class="form-group">
                    <%= text_field_tag :search_term, nil, class: "form-control", placeholder: "Search Recipes" %>
                  </div>
                <%= submit_tag "Search", class: "btn btn-default" %>
                <% end %>
            <% end %>
     
</ul>

      </div> <!-- .navbar-collapse -->
  </div> <!-- /.container-fluid -->
   
</nav> <!-- /.Navigation --> 



<%= yield %>

