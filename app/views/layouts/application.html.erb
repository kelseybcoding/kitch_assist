<!DOCTYPE html>
<html>
  <head>
    <title>KitchAssist</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

<%= form_tag '/recipes', method: :get, class: "navbar-form navbar-right" do %>
          <div class="form-group">
            <%= text_field_tag :search_term, nil, class: "form-control", placeholder: "Search Recipes" %>
          </div>
            <%= submit_tag "Search", class: "btn btn-default" %>
<% end %>

  <div>
  <p class="navbar-text navbar-right">
    <% if current_member %>
      | Signed in as <a href="/members/<%= current_member.id %>" class="navbar-link"><%= current_member.username %></a>
    <% end %>
  </p>
  </div>
  <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><span class="glyphicon glyphicon-align-justify" aria-hidden="true"></span></span></a>
          <ul class="dropdown-menu" role="menu">
          
          <li class="divider"></li>

            <% if current_member %>
              <li><%= link_to "Add Items to Your Pantry", "/ingredients" %></li>
              <li><%= link_to "View Your Pantry", "/pantry_items" %></li>
              <li><%= link_to "Logout", '/logout' %></li>
    
            <% else %>
              <li><%= link_to 'Login', '/login' %></li>
              <li><%= link_to 'Signup', '/signup' %></li>
            <% end %>          
            
          </ul>
        </li>
      </ul>
    </div>
  
    <%= yield %>
  </body>
</html>

