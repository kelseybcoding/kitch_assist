<h1>Editing Recipe</h1>


<%#= <%= render 'form', recipe: @recipe %>
<% @ingredients.each do |ingredient| %>
	<%= ingredient.name %>
<% end %>

<%= form_tag "/required_ingredients", method: :post do %>

<%= hidden_field_tag :ingredient_id, @ingredient.id %>
<%= hidden_field_tag :recipe_id, @recipe.id %>

<%= text_field_tag :quantity %>
<%= text_field_tag :units %>

<%= submit_tag 'Add' %>

<% end %>

