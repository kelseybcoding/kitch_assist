<!-- About Section -->
<section id="about">
  <div class="container"> 
    <!-- Heading and Subheading -->
    <div class="row">
      <div class="col-lg-12 text-center">
        <div class="fadeInDown wow">
          <p id="notice"><%= notice %></p>
          <h2 class="section-heading"><span class=
                    "orange-accent"><strong><%= @recipe.title %></strong></span></h2>
        <p class="section-subheading"><%= @recipe.description %></p>
        </div>
      </div>
    </div>
    <!-- /.Heading and Subheading --> 
    
    <!-- Border -->
    <div class="bounceIn wow">
      <!-- <div class="border"> -->
        <div class="row">
          <div class="col-lg-12 text-center">
            <p class="mrgn30-btm"><%= image_tag("border.svg", size: "177x26", class: "img-responsive center-block") %></p>
          </div>
        </div>
      </div>
    </div>
    <!-- /.Border --> 
    
    <!-- Description -->
    <div class="fadeInUp wow">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">

          <p><strong>Yield:</strong> <%= @recipe.yield_number %> <%= @recipe.yield_unit %></p>
          <p class="mrgn20-top"><strong>Total Time:</strong> <%= @recipe.total_time %> minutes</p>
          <p class="mrgn20-top"><strong>Instructions:</strong> <%= @recipe.instructions %></p>
          <p>
<div class="table-responsive">
          <table class="table" width="100%">
          <td>
          <p><strong>Ingredients: </strong></p>
          <ul>
          <% @recipe.required_ingredients.each do |required| %>
          <li><%= required.quantity.to_i %> <%= required.units %> <%= required.ingredient.name %></li>
          <% end %>
          </ul>
          </td>
          <td><%= image_tag (@recipe.photo_url), class: "recipe-image" %></td>
          </p> 
          </table>
          </div> <!-- end table responsive -->
        </div>
      </div>
    </div>
    <!-- /.Description --> 
  </div>
  <!-- /.container --> 
</section>
<!-- /.About Section --> 
