<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

  <div class="row">
    <% @recipes.each do |recipe| %>
        <div class="col-md-3">
          <div class="thumbnail">
        <h3><%= recipe.title %></h3>
        <h4><%= recipe.servings %></h4>
        <h4><%= recipe.prep_time %></h4>
        <h4><%= recipe.cook_time %></h4>
        <p><%= recipe.instructions %></p>
        <h5><%= link_to 'Show', recipe %></h5>
        <h5><%= link_to 'Edit', edit_recipe_path(recipe) %></h5>
        <h5><%= link_to 'Delete', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></h5>
          </div>
      </div>
    <% end %>
 </div>
   
<br>

